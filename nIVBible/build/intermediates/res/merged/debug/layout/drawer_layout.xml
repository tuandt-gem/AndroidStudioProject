<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282828"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lnr_bible_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_extra_long" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:src="@drawable/menu_logo"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textvw_bible_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/padding_normal"
                android:text="Twi Bible"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_extra_med_large"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_bible_reader"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/com_bible_drawable_drawer_item_selected"
            android:orientation="horizontal"
            android:paddingLeft="24dp" >

            <ImageView
                android:id="@+id/mainmenu_reader_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/reader_menu_icon" />

            <TextView
                android:id="@+id/txtvw_reader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:text="Reader"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#282828" />

        <LinearLayout
            android:id="@+id/lnr_bible_bookmark"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/com_bible_drawable_drawer_item_selected"
            android:orientation="horizontal"
            android:paddingLeft="24dp" >

            <ImageView
                android:id="@+id/mainmenu_bookmark_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/bookmarks_menu_icon" />

            <TextView
                android:id="@+id/txtvw_bookmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:text="Bookmarks"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#282828" />

        <LinearLayout
            android:id="@+id/lnr_bible_share"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/com_bible_drawable_drawer_item_selected"
            android:orientation="horizontal"
            android:paddingLeft="24dp" >

            <ImageView
                android:id="@+id/mainmenu_share_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/share_menu_icon" />

            <TextView
                android:id="@+id/txtvw_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#282828" />

        <LinearLayout
            android:id="@+id/lnr_bible_notes"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/com_bible_drawable_drawer_item_selected"
            android:orientation="horizontal"
            android:paddingLeft="24dp" >

            <ImageView
                android:id="@+id/mainmenu_share_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/notes_menu_icon" />

            <TextView
                android:id="@+id/txtvw_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:text="Notes"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#282828" />

        <LinearLayout
            android:id="@+id/lnr_bible_font_size"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/com_bible_drawable_drawer_item_selected"
            android:orientation="horizontal"
            android:paddingLeft="24dp" >

            <ImageView
                android:id="@+id/mainmenu_share_font_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/font_menu_icon" />

            <TextView
                android:id="@+id/txtvw_font_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:text="Font Size"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#282828" />

        <LinearLayout
            android:id="@+id/lnr_bible_help"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/com_bible_drawable_drawer_item_selected"
            android:orientation="horizontal"
            android:paddingLeft="24dp" >

            <ImageView
                android:id="@+id/mainmenu_share_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/help_menu_icon" />

            <TextView
                android:id="@+id/txtvw_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:text="Help"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Project/Amplified/AndroidStudioProject/nIVBible/src/main/res/layout/drawer_layout.xml -->