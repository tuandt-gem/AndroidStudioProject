<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:tag="Bottom3">

        <Button
            android:id="@+id/note_item_delete_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FF5534"
            android:padding="@dimen/padding_normal"
            android:text="Delete"
            android:textColor="#fff"
            android:textSize="17sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_item_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/item_note_verse_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:text="Genesis 1:1"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_note_color_iv"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>


            <TextView
                android:id="@+id/item_note_content_text"
                style="@style/TextNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_note_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:text=""/>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout><!-- From: file:/D:/Project/Amplified/AndroidStudioProject/nIVBible/src/main/res/layout/list_item_note.xml -->