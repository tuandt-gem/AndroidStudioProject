<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <EditText
        android:id="@+id/list_notes_search_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="top"
        android:hint="@string/menu_search"
        android:imeOptions="actionSearch"
        android:lines="1"
        android:maxLines="1"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/list_notes_count_tv"
        style="@style/TextNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_notes_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

</LinearLayout><!-- From: file:/D:/Project/Amplified/AndroidStudioProject/nIVBible/src/main/res/layout/notes_fragment.xml -->